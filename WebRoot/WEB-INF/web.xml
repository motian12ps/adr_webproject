<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">


  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>AllHere</servlet-name>
    <servlet-class>com.insilico.servelet.AllHere</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>getSimpleForm</servlet-name>
    <servlet-class>com.insilico.servelet.getSimpleForm</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>getAdvancedForm</servlet-name>
    <servlet-class>com.insilico.servelet.getAdvancedForm</servlet-class>
  </servlet>





  <servlet-mapping>
    <servlet-name>AllHere</servlet-name>
    <url-pattern>/servlet/AllHere</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>getSimpleForm</servlet-name>
    <url-pattern>/servlet/getSimpleForm</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>getAdvancedForm</servlet-name>
    <url-pattern>/servlet/getAdvancedForm</url-pattern>
  </servlet-mapping>
</web-app>